{% extends "h:templates/layouts/admin.html.jinja2" %}

{% set page_id = 'index' %}
{% set page_title = 'Administration pages' %}

{% block content %}
  <p>Welcome to the Hypothesis administration console!</p>
  <dl class='dl-horizontal'>
    {% for key, value in release_info|dictsort %}
      <dt>{{ key }}</dt>
      <dd>{% if value|trim %}{{ value }}{% else %}<em>Unknown</em>{% endif %}</dd>
    {% endfor %}
  </dl>
  <form action="/admin/upload" method="POST" enctype="multipart/form-data">
    <input class="nav-bar-links__link" type="file" id="file-uploads" name="file_uploads">
    <input class="nav-bar-links__link" type="submit" id="submit-button">
  </form>
  <h3></h3>
  <h4>documents</h4>
  <ol class="search-bucket-stats__val">
    {% for file in files %}
      <li class="search-bucket-stats__username">
        <a href="{{ file.target_uri }}">{{ file.filename }}</p>
        </a>
      </li>
    {% endfor %}
  </ol>
{% endblock %}
